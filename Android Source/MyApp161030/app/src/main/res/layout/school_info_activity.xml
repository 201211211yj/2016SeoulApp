<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:showDividers="middle|beginning|end"
    android:baselineAligned="false">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffcfc4">

    <LinearLayout
        android:padding="5dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/school_info_exitbtn"
            android:background="@drawable/ic_delete"/>
    </LinearLayout>

    <TextView
        android:id="@+id/school_info_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="NAME"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_gravity="left|center_vertical" />
</FrameLayout>
    <HorizontalScrollView
        android:id = "@+id/school_info_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contextClickable="true">
    </HorizontalScrollView>
   <GridLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="10dp"
       android:columnCount="2"
       android:rowCount="10">
       <TextView
           android:id="@+id/school_info_kindertype"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="kindertype"
           android:textSize="15sp"
           android:textStyle="bold"
           android:layout_row="0"
           android:layout_column="1"/>

       <TextView
           android:id="@+id/school_info_childlimit"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="childlimit"
           android:textSize="15sp"
           android:textStyle="bold"
           android:layout_row="1"
           android:layout_column="1" />
       <TextView
           android:id="@+id/school_info_teacher"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="teacher"
           android:textSize="15sp"
           android:textStyle="bold"
           android:layout_row="2"
           android:layout_column="1" />
       <TextView
           android:id="@+id/school_info_address"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="address"
           android:textSize="15sp"
           android:textStyle="bold"
           android:layout_row="3"
           android:layout_column="1" />
       <TextView
           android:id="@+id/school_info_phone"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="phone"
           android:textSize="15sp"
           android:textStyle="bold"
           android:layout_row="4"
           android:layout_column="1" />
       <TextView
           android:id="@+id/school_info_room"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="room"
           android:textSize="15sp"
           android:textStyle="bold"
           android:layout_row="5"
           android:layout_column="1" />
       <TextView
           android:id="@+id/school_info_park"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="park"
           android:textSize="15sp"
           android:textStyle="bold"
           android:layout_row="6"
           android:layout_column="1" />
       <TextView
           android:id="@+id/school_info_cctv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="cctv"
           android:textSize="15sp"
           android:textStyle="bold"
           android:layout_row="7"
           android:layout_column="1" />
       <TextView
           android:id="@+id/school_info_bus"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="bus"
           android:textSize="15sp"
           android:textStyle="bold"
           android:layout_row="8"
           android:layout_column="1" />
       <TextView
           android:id="@+id/school_info_hompage"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="homepage"
           android:textSize="15sp"
           android:textStyle="bold"
           android:layout_row="9"
           android:layout_column="1" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="유형"
           android:textSize="15sp"
           android:textStyle="bold"
           android:layout_row="0"
           android:layout_column="0"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="정원 수"
           android:textSize="15sp"
           android:textStyle="bold"
           android:layout_row="1"
           android:layout_column="0"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="교사 수"
           android:textSize="15sp"
           android:textStyle="bold"
           android:layout_row="2"
           android:layout_column="0"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="주소"
           android:textSize="15sp"
           android:textStyle="bold"
           android:layout_row="3"
           android:layout_column="0"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="전화번호"
           android:textSize="15sp"
           android:textStyle="bold"
           android:layout_row="4"
           android:layout_column="0"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="교실 수"
           android:textSize="15sp"
           android:textStyle="bold"
           android:layout_row="5"
           android:layout_column="0"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="놀이터 수"
           android:textSize="15sp"
           android:textStyle="bold"
           android:layout_row="6"
           android:layout_column="0"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="CCTV 설치 수"
           android:textSize="15sp"
           android:textStyle="bold"
           android:layout_row="7"
           android:layout_column="0"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="버스 운행"
           android:textSize="15sp"
           android:textStyle="bold"
           android:layout_row="8"
           android:layout_column="0"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="홈페이지"
           android:textSize="15sp"
           android:textStyle="bold"
           android:layout_row="9"
           android:layout_column="0"/>
   </GridLayout>

    <Button
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/school_info_regibtn"
        android:background="@drawable/dialog_window"
        android:textSize="20dp"
        android:text="등록"
        android:layout_gravity="center_horizontal" />

</LinearLayout>