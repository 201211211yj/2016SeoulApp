<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/dialog_window">

        <Button
            android:id="@+id/notice_savebtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text ="저장"
            android:onClick="notice_edit_clicksave"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/dialog_window"/>

        <Button
            android:id="@+id/notice_exitbtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text ="취소"
            android:textColor="#ff8e8e"
            android:onClick="notice_edit_clickexit"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/dialog_window"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
        <EditText
            android:id="@+id/notice_edittitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginBottom="5dp"
            android:background="#ffffff"/>
        <EditText
            android:id="@+id/notice_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:gravity="top"
            android:background="#ffffff"/>
    </LinearLayout>
</LinearLayout>